#!/usr/bin/env bash

set -euo pipefail
set -x

: ${CAVEATICA_SERVER_FQDN:?Please set CAVEATICA_SERVER_FQDN}
: ${CAVEATICA_SERVER_USER:?Please set CAVEATICA_SERVER_USER}
: ${MIX_TARGET:?Please set MIX_TARGET}
: ${FIRMWARE_DEVICE:?Please set FIRMWARE_DEVICE}
: ${WIFI_SSID:?Please set WIFI_SSID}
set +x
: ${WIFI_PASSPHRASE:?Please set WIFI_PASSPHRASE}
set -x

sudo chown -R $USER: _build

mix firmware

sudo \
  env \
  "PATH=$PATH" \
  "HOME=$HOME" \
  "CAVEATICA_SERVER_FQDN=$CAVEATICA_SERVER_FQDN" \
  "CAVEATICA_SERVER_USER=$CAVEATICA_SERVER_USER" \
  "MIX_TARGET=$MIX_TARGET" \
  "FIRMWARE_DEVICE=$FIRMWARE_DEVICE" \
  "WIFI_SSID=$WIFI_SSID" \
  "WIFI_PASSPHRASE=$WIFI_PASSPHRASE" \
  mix burn --device=$FIRMWARE_DEVICE

sudo chown -R $USER: _build
